@model SampleSecureWeb.ViewModels.LoginViewModel

<div class="row justify-content-center">
    <div class="col-lg-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header text-center">
                <h4>Login</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success">
                        @ViewBag.Message
                    </div>
                }
                <form asp-action="Login">
                    <input type="hidden" asp-for="ReturnUrl" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <input asp-for="Username" class="form-control" placeholder="Username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <label asp-for="RememberLogin" class="form-check-label">
                            <input asp-for="RememberLogin" class="form-check-input" />
                            <strong>Remember Me</strong>
                        </label>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-block" value="Login" />
                    </div>
                </form>

                <div class="text-center mt-3">
                    <span>Tidak punya akun?</span>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-link">Daftar Sekarang</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
